<div class="aos-overlap-container aos-overlap-container--short car-header">
    <div class="promo-header-image" style="margin-bottom: 35px; z-index:5;">
        <picture>
            @Html.Partial("~/Views/Careers/Partials/CareersBannerContent.cshtml")
        </picture>
        <div class="form-container landing">
            @Html.Partial("~/Views/Careers/Partials/CareersSearchBar.cshtml")
        </div>
    </div>
    <div class="aos-overlap-container__content aos-overlap-container__content--large">
        <div class="aos-detail-frame p-30 careers-subpage">
            @*For mobile view*@
            <div class="d-lg-none">
                @Html.Partial("~/Views/Layouts/Partials/MessageBox.cshtml")
            </div>
            <div class="col-md-3 col-md-push-9 cms-container cms-detail__right pr-0">
                @Html.Sitecore().DynamicPlaceholder("Menu")
                @*For mobile view*@
                <h1 class="d-lg-none">
                    @Html.Sitecore().Field("Page Title")
                </h1>
                @Html.Sitecore().DynamicPlaceholder("Sidebar")
                @*For mobile view*@
                <div class="d-none d-lg-block">@Html.Partial("~/Views/Careers/Partials/CareersSocialMediaBar.cshtml")</div>
            </div>
            <div class="col-md-9 col-md-pull-3 cms-container cms-detail__left pl-0">
                @*For desktop/laptop view*@
                <div class="d-none d-lg-block">
                    @Html.Partial("~/Views/Layouts/Partials/MessageBox.cshtml")
                </div>
                @if (Sitecore.Context.Item.InExperienceEditorOrHasValue("Page Title"))
                {
                    @*For desktop/laptop view*@
                    <h1 class="d-none d-lg-block">
                        @Html.Sitecore().Field("Page Title")
                    </h1>
                }
                @Html.Sitecore().DynamicPlaceholder("Body")
                @*For mobile view*@
                <div class="d-lg-none row">@Html.Partial("~/Views/Careers/Partials/CareersSocialMediaBar.cshtml")</div>
            </div>
        </div>
    </div>
</div>

<script>
    (function ($, global, document) {
        if ("@RenderingContext.Current.Rendering.RenderingItem.ID" == "{4E2551BD-7A40-452F-A718-C4B22E334564}" && !$("#mainPageBody").hasClass("ah-careers")) {
            $("#mainPageBody").addClass("ah-careers");
        }
    }(jQuery, window, document));
</script>